<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_subtitle"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:alpha="0.7"
            android:layout_marginBottom="8dp" />

        <!-- AI Service Type Badge -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ai_service_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Mode: Intelligent Mock"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:alpha="0.6"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- AI Unavailable Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ai_unavailable_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ai"
                    android:alpha="0.5"
                    app:tint="?attr/colorOnSurface" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="@string/ai_unavailable"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:gravity="center" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/ai_unavailable_details"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:alpha="0.7"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Features Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/features_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Recipe Suggestions -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_suggest_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_suggest_recipes"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_recipes"
                    app:iconGravity="start"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <!-- Grocery List Generation -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_generate_grocery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/ai_generate_grocery"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_grocery"
                    app:iconGravity="start"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <!-- Ingredient Substitutes -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_substitutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/ai_substitutes"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_pantry"
                    app:iconGravity="start"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <!-- Ask Question -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ask_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/ai_ask_question"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_ai"
                    app:iconGravity="start"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_info_title"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/ai_info_description"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:alpha="0.8" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>



